<!DOCTYPE html>
<html lang="en">

<head>
    <title>home</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h1>this is detail come form mysql datbase</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4">

                <h1>insert records</h1>

                <form method="post" action="/">
                    <label for="rno">rollno</label>
                    <input autocomplete="off" type="text" id="rno" name="rno"><br><br>
                    <label for="sname">sname</label>
                    <input autocomplete="off" type="text" id="sname" name="sname"><br><br>
                    <label for="saddress">address</label>
                    <input autocomplete="off" type="text" id="saddress" name="saddress"><br><br>
                    <label for="mno">mobileno</label>
                    <input type="tel" id="mno" name="mno"><br><br>
                    <input type="submit" value="Submit"><br><br>

                </form>

            </div>
            <div class="col-sm-8">
                <h1>delete records</h1>
                <form method="post" action="/delete">
                    <label for="rno">rollno</label>
                    <input autocomplete="off" type="text" id="rno" name="rno"><br><br>
                    <input type="submit" value="Submit"><br><br>
                </form>
            </div>
        </div>
    </div>

    <table class="table table-light">

        <tr>
            <th>rno</th>
            <th>name</th>
            <th>address</th>
            <th>mobileno</th>
        </tr>


        <% c1.forEach(c1=>{%>
            <tr>
                <th>
                    <%= c1.rno %>
                </th>
                <th>
                    <%= c1.sname%>
                </th>
                <th>
                    <%= c1.saddress%>
                </th>
                <th>
                    <%=c1.mobileno%>
                </th>
            </tr>
            <% })%>



    </table>

</html>